{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "E-NOR Extension Manifest",
  "description": "Schema for E-NOR extension manifest.json files",
  "type": "object",
  "required": ["id", "name", "version"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the extension (lowercase, underscores)",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name of the extension"
    },
    "description": {
      "type": "string",
      "description": "Brief description of what the extension does"
    },
    "version": {
      "type": "string",
      "description": "Semantic version (e.g., 1.0.0)",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "author": {
      "type": "string",
      "description": "Name of the extension creator"
    },
    "type": {
      "type": "string",
      "description": "Type of extension",
      "enum": ["feature", "game", "emotion", "mode", "action", "utility"]
    },
    "category": {
      "type": "string",
      "description": "UI category for grouping extensions in the main interface. Fixed categories: games, modes, tools, quizzes. Custom categories: custom1-4 (configurable in settings)",
      "enum": ["games", "modes", "tools", "quizzes", "custom1", "custom2", "custom3", "custom4"],
      "default": "tools"
    },
    "enabled": {
      "type": "boolean",
      "description": "Whether the extension is enabled",
      "default": true
    },
    "voice_triggers": {
      "type": "array",
      "description": "Voice phrases that activate this extension",
      "items": {
        "type": "object",
        "required": ["phrases"],
        "properties": {
          "phrases": {
            "type": "array",
            "items": { "type": "string" },
            "description": "List of trigger phrases"
          },
          "action": {
            "type": "string",
            "description": "Action to perform when triggered"
          },
          "handler": {
            "type": "string",
            "description": "Name of handler function in handler.py"
          }
        }
      }
    },
    "ui_components": {
      "type": "array",
      "description": "Custom UI components",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "file": { "type": "string" }
        }
      }
    },
    "dependencies": {
      "type": "array",
      "description": "Python package dependencies",
      "items": { "type": "string" }
    }
  }
}
